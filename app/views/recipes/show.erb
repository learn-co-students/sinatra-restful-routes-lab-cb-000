<div class="recipe">
  <h1><%= @recipe.name %></h1>
  <p><%= @recipe.ingredients %></p>
  <p><%= @recipe.cook_time %> minutes</p>
</div>
<form method="POST" action="/recipes/<%= @recipe.id %>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete" />
  <button id="delete" type="submit" value="submit">Delete Recipe</button>
</form>
