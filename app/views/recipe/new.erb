<h1>Create a new recipe!</h1>
<form method="POST" action="/recipes/new">
  <div>
  <p>Name:</p>
  <input type="text" name="name">
  </div>

  <div>
  <p>Ingredients:</p>
  <input type="text" name="ingredients">
  </div>

  <div>
  <p>Cook Time:</p>
  <input type="text" name="cook_time">
  </div>
  <input type="submit" value="submit">
</form>
