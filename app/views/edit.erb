<form action='/recipes/<%=@recipe.id%>' method='POST'>

    <label for='name'>Recipe Name: </label>
    <input type='string' name='name' id='name' value ='<%=@recipe.name%>'/><br>

    <label for='ingredients'>Ingredients: </label>
    <input type='string' name='ingredients' id='ingredients' value ='<%=@recipe.ingredients%>'/><br>

    <label for='cook_time'>Cook Time: </label>
    <input type='string' name='cook_time' id='cook_time' value ='<%=@recipe.cook_time>'/><br>

    <input id="hidden" type="hidden" name="_method" value="patch">

    <input type="submit" value = "Update" id="submit"/>
</form>
