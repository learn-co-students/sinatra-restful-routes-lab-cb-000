<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="name">Name:</label><br><br>
    <input id="recipe_name" type="text" value="<%= @recipe.name %>" name="name"><br><br>

    <label for="ingredients">Ingredients:</label><br><br>
    <input id="ingredients" type="text" value="<%= @recipe.ingredients %>" name="ingredients"><br><br>

    <label for="cook_time">Cook Time:</label><br><br>
    <input id="cook_time" type="text" value="<%= @recipe.cook_time %>" name="cook_time"><br><br>

    <input type="submit" value="submit">
</form>



