<h1>Edit Recipe</h1>  
<form action="/recipes/<%= @recipe.id %>" method="post">
    <label for="name" type="text">Recipe Name: </label><input id="name" type="text" name="name" value="<%= @recipe.name %>">
    <label for="ingredients" type="text">Recipe Ingredients: </label><input id="ingredients" type="text" name="ingredients" value="<%= @recipe.ingredients %>">
      <label for="cook_time" type="text">Recipe Ingredients: </label><input id="cook_time" type="text" name="cook_time" value="<%= @recipe.cook_time %>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input type="submit" value="submit">
</form>