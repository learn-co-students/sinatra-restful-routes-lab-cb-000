
<head>
  <title>Recipes</title>
</head>

<body>
  <h1><%=@recipe.name%></h1>
  <p>
      <h3>Ingredients: <%=@recipe.ingredients%></h3><br>
      <h3>Cook Time: <%=@recipe.cook_time%></h3><br>
  </p>

  <p>
    <form action="/recipes/<%= @recipe.id %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <h3>Name:<input type="text" name="name"></h3><br>
      <h3>Ingredients:<textarea name="ingredients" rows="1" cols="80"></textarea></h3><br>
      <h3>Cook Time:<input type="text" name="cook_time"></h3><br>
      <input type="submit" value="submit">
    </form>
  </p>
</body>
