<form method="POST" action="/recipes/<%=@recipe.id%>">
	<input id="hidden" type="hidden" name="_method" value="patch">

	<h3><label>Recipe Name</label></h3>
	<p><input type='text' name='name' value='<%=@recipe.name%>'></p>

	<h3><label>Ingredients</label></h3>
	<p><input type='text' name='ingredients' value='<%=@recipe.ingredients%>'></p>

	<h3><label>Cook Time</label></h3>
	<p><input type='text' name='cook_time' value='<%=@recipe.cook_time%>'></p>

	<p><input type='submit' value='submit'></p>
</form>