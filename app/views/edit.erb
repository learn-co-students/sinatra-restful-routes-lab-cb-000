

<form method="post" action="/recipes/<%= @recipes.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="text" name="name" value="<%= @recipes.name %>">
  <br>
  Ingredients: <input type="text" name="ingredients" value="<%= @recipes.ingredients %>">
  <br>
  Cooking Time: <input type="text" name="cook_time" value="<%= @recipes.cook_time %>">
  <br>
  <br>
  <br>
  <input type="submit" value="submit">
  
</form>